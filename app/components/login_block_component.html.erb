<!-- Блок логина -->
<div class="static-modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2 class="modal-title">Login</h2>
      <button class="modal-close" onclick="closeModal('<%= modal_id %>')">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
    <div class="modal-body">
      <form class="form">
        <div class="form-group">
          <label class="form-label" for="loginEmail">Email</label>
          <input class="input input-lg input-outline" type="email" id="loginEmail" placeholder="Enter your email">
        </div>
        
        <div class="form-group">
          <label class="form-label" for="loginPassword">Password</label>
          <input class="input input-lg input-outline" type="password" id="loginPassword" placeholder="Enter your password">
        </div>
        
        <div class="form-group">
          <label class="checkbox-label">
            <input type="checkbox" id="rememberMe">
            <span class="checkbox-text">Remember me</span>
          </label>
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <button class="btn btn-md btn-outline" onclick="closeModal('<%= modal_id %>')">
        <span class="btn-text">Close</span>
      </button>
      <button class="btn btn-md btn-primary">
        <span class="btn-text">Login</span>
      </button>
    </div>
  </div>
</div>
