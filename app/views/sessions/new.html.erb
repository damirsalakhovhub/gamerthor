<div class="form-block">
  <div class="form-content">
    <h2 class="modal-title">Login</h2>
    
    <%= form_with url: sessions_path, local: true, class: "form" do |form| %>
      <div class="form-group">
        <%= form.label :first_name, "First Name", class: "form-label" %>
        <%= form.text_field :first_name, class: "input input-lg input-outline", placeholder: "Enter first name" %>
      </div>
      
      <div class="form-group">
        <%= form.label :last_name, "Last Name", class: "form-label" %>
        <%= form.text_field :last_name, class: "input input-lg input-outline", placeholder: "Enter last name" %>
      </div>
      
      <div class="form-footer">
        <%= form.submit "Login", class: "btn btn-md btn-primary" %>
      </div>
    <% end %>
    
    <div class="form-toggle">
      <p>Don't have an account? <%= link_to "Register", root_path %></p>
    </div>
  </div>
</div>