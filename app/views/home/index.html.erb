<div class="form-block">
  <div class="form-content">
    <h2 class="modal-title">Registration GT</h2>
    
    <%= form_with model: User.new, url: users_path, local: true, class: "form" do |form| %>
      <div class="form-group">
        <%= form.label :first_name, "First Name", class: "form-label" %>
        <%= form.text_field :first_name, class: "input input-lg input-outline", placeholder: "Enter first name" %>
      </div>
      
      <div class="form-group">
        <%= form.label :last_name, "Last Name", class: "form-label" %>
        <%= form.text_field :last_name, class: "input input-lg input-outline", placeholder: "Enter last name" %>
      </div>
      
      <div class="form-group">
        <%= form.label :age, "Age", class: "form-label" %>
        <%= form.select :age, (18..65).to_a, { prompt: "Select age" }, { class: "select select-lg select-default" } %>
      </div>
      
      <div class="form-group">
        <%= form.label :city, "City", class: "form-label" %>
        <%= form.text_field :city, class: "input input-lg input-outline", placeholder: "Enter city" %>
      </div>
      
      <div class="form-footer">
        <%= form.submit "Register", class: "btn btn-md btn-primary" %>
      </div>
    <% end %>
    
    <div class="form-toggle">
      <p>Already have an account? <%= link_to "Login", new_session_path %></p>
    </div>
  </div>
</div>
