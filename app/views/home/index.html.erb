<div class="form-block">
  <div class="form-content">
    <h2 class="modal-title">Registration GT</h2>
    
    <form class="form">
      <div class="form-group">
        <label class="form-label">First Name</label>
        <input type="text" class="input input-lg input-outline" placeholder="Enter first name">
      </div>
      
      <div class="form-group">
        <label class="form-label">Last Name</label>
        <input type="text" class="input input-lg input-outline" placeholder="Enter last name">
      </div>
      
      <div class="form-group">
        <label class="form-label">Age</label>
        <select class="select select-lg select-default">
          <option>Select age</option>
          <% (18..65).each do |age| %>
            <option value="<%= age %>"><%= age %></option>
          <% end %>
        </select>
      </div>
      
      <div class="form-group">
        <label class="form-label">City</label>
        <input type="text" class="input input-lg input-outline" placeholder="Enter city">
      </div>
      
      <div class="form-footer">
        <button type="submit" class="btn btn-md btn-primary">Register</button>
      </div>
    </form>
    
    <div class="form-toggle">
      <p>Already have an account? <a href="#">Login</a></p>
    </div>
  </div>
</div>
